<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="WebLoadTester.Views.MainWindow"
        Title="WebLoadTester"
        Width="1250" Height="720"
        MinWidth="1100" MinHeight="650"
        Background="#E6E6E6">

	<Window.Styles>
		<Style Selector="TextBlock.h1">
			<Setter Property="FontSize" Value="16"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="Foreground" Value="#222"/>
		</Style>

		<Style Selector="TextBlock.label">
			<Setter Property="FontSize" Value="13"/>
			<Setter Property="Foreground" Value="#222"/>
			<Setter Property="VerticalAlignment" Value="Center"/>
		</Style>

		<Style Selector="TextBox, ComboBox">
			<Setter Property="MinHeight" Value="30"/>
		</Style>

		<Style Selector="Button">
			<Setter Property="MinHeight" Value="30"/>
			<Setter Property="Padding" Value="12,6"/>
		</Style>

		<Style Selector="Border.panel">
			<Setter Property="Background" Value="#F2F2F2"/>
			<Setter Property="BorderBrush" Value="#C8C8C8"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="CornerRadius" Value="6"/>
			<Setter Property="Padding" Value="10"/>
		</Style>

		<!-- ЛОГ: чёрный фон и светлый моноширинный текст -->
		<Style Selector="Border.logbox">
			<Setter Property="Background" Value="#0B0B0B"/>
			<Setter Property="BorderBrush" Value="#3A3A3A"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="CornerRadius" Value="4"/>
			<Setter Property="Padding" Value="8"/>
		</Style>

		<Style Selector="TextBlock.logline">
			<Setter Property="Foreground" Value="#E6E6E6"/>
			<Setter Property="FontFamily" Value="Cascadia Mono,Consolas,Menlo,Monospace"/>
			<Setter Property="FontSize" Value="13"/>
		</Style>
	</Window.Styles>

	<Grid Margin="12"
		  ColumnDefinitions="300,*,340"
		  RowDefinitions="Auto,*,Auto"
		  ColumnSpacing="12"
		  RowSpacing="10">

		<!-- LEFT: selectors -->
		<Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="3" Classes="panel">
			<Grid RowDefinitions="Auto,*,Auto" RowSpacing="8">
				<TextBlock Text="Нажатия CSS selector" Classes="h1"/>

				<Border Grid.Row="1" Background="#FFFFFF" BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="4" Padding="6">
					<ListBox>
						<ListBoxItem>button.login</ListBoxItem>
						<ListBoxItem>#submit</ListBoxItem>
						<ListBoxItem>.menu &gt; .item:nth-child(2)</ListBoxItem>
					</ListBox>
				</Border>

				<Grid Grid.Row="2" ColumnDefinitions="*,*,*,*" ColumnSpacing="8">
					<Button Grid.Column="0" Content="+ Add"/>
					<Button Grid.Column="1" Content="Remove"/>
					<Button Grid.Column="2" Content="Up"/>
					<Button Grid.Column="3" Content="Down"/>
				</Grid>
			</Grid>
		</Border>

		<!-- CENTER TOP: settings + controls (без наезда) -->
		<Border Grid.Column="1" Grid.Row="0" Classes="panel">
			<Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="10">

				<!-- Row 0: URL + Name + Version -->
				<Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto,180,Auto" ColumnSpacing="10">
					<TextBlock Grid.Column="0" Text="Ссылка:" Classes="label"/>
					<TextBox Grid.Column="1" Watermark="https://example.com"/>

					<TextBlock Grid.Column="2" Text="Name:" Classes="label"/>
					<TextBox Grid.Column="3" Watermark="PC-Name"/>
				</Grid>

				<!-- Row 1: numeric fields (WrapPanel сам переносит) -->
				<WrapPanel Grid.Row="1">
					<StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,14,0">
						<TextBlock Text="Всего прогонов:" Classes="label"/>
						<TextBox Width="110" Watermark="50"/>
					</StackPanel>

					<StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,14,0">
						<TextBlock Text="Параллельно (1–50):" Classes="label"/>
						<TextBox Width="90" Watermark="10"/>
					</StackPanel>

					<StackPanel Orientation="Horizontal" Spacing="8">
						<TextBlock Text="Таймаут (сек):" Classes="label"/>
						<TextBox Width="90" Watermark="30"/>
					</StackPanel>
				</WrapPanel>

				<!-- Row 2: checkboxes -->
				<WrapPanel Grid.Row="2">
					<CheckBox Content="Запуск браузера без UI" IsChecked="True" Margin="0,0,18,0"/>
					<CheckBox Content="Скриншот после прогона"/>
				</WrapPanel>


				<!-- Row 3: buttons (тоже WrapPanel, чтобы не ломалось на узкой ширине) -->
				<WrapPanel Grid.Row="3">
					<Button Content="Load scenario.json" Margin="0,0,10,0"/>
					<Button Content="Save scenario.json" Margin="0,0,10,0"/>
					<Button Content="Начать" Margin="0,0,10,0"/>
					<Button Content="Перезапустить" Margin="0,0,10,0"/>
					<Button Content="Стоп" Margin="0,0,10,0"/>
				</WrapPanel>

			</Grid>
		</Border>

		<!-- CENTER: log -->
		<Border Grid.Column="1" Grid.Row="1" Classes="panel">
			<Grid RowDefinitions="Auto,*" RowSpacing="8">
				<TextBlock Text="Лог выполнения" Classes="h1"/>

				<Border Grid.Row="1" Classes="logbox">
					<ScrollViewer VerticalScrollBarVisibility="Auto">
						<StackPanel Spacing="2">
							<TextBlock Classes="logline" Text="[12:00:01] Запуск приложения"/>
							<TextBlock Classes="logline" Text="[12:00:02] Готов к запуску"/>
							<TextBlock Classes="logline" Text="[12:00:03] Ожидание..."/>
						</StackPanel>
					</ScrollViewer>
				</Border>
			</Grid>
		</Border>

		<!-- RIGHT: Telegram Settings (без Test/Close) -->
		<Border Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" Classes="panel">
			<Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,*"
				  ColumnDefinitions="Auto,*"
				  ColumnSpacing="10"
				  RowSpacing="10">

				<TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
						   Text="Telegram Settings" Classes="h1"/>

				<CheckBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
						  Content="Отправлять в Telegram"/>

				<CheckBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
						  Content="Отправлять Скриншоты"/>

				<TextBlock Grid.Row="3" Grid.Column="0"
						   Text="Режим:" Classes="label"/>
				<ComboBox Grid.Row="3" Grid.Column="1" SelectedIndex="1" MinWidth="180">
					<ComboBoxItem>Каждый прогон</ComboBoxItem>
					<ComboBoxItem>Только при ошибке</ComboBoxItem>
					<ComboBoxItem>Только финальный</ComboBoxItem>
				</ComboBox>

				<TextBlock Grid.Row="4" Grid.Column="0"
						   Text="Bot Token:" Classes="label"/>
				<TextBox Grid.Row="4" Grid.Column="1"
						 Watermark="123456:ABC-DEF..."/>

				<TextBlock Grid.Row="5" Grid.Column="0"
						   Text="Chat ID:" Classes="label"/>
				<TextBox Grid.Row="5" Grid.Column="1"
						 Watermark="-1001234567890"/>

				<TextBlock Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
						   Foreground="#666"
						   Text="Настройки применятся после подключения логики (VM)."/>
			</Grid>
		</Border>

		<!-- STATUS BAR -->
		<Border Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2"
				Background="#F2F2F2"
				BorderBrush="#C8C8C8"
				BorderThickness="1"
				CornerRadius="6"
				Padding="8">
			<DockPanel>
				<TextBlock Text="Status: Idle" Foreground="#333"/>
				<TextBlock DockPanel.Dock="Right" Text="Progress: 0/0" Foreground="#333"/>
			</DockPanel>
		</Border>

	</Grid>
</Window>
