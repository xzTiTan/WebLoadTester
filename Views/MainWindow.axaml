<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WebLoadTester.ViewModels"
        x:Class="WebLoadTester.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="WebLoadTester"
        Width="1250" Height="720"
        MinWidth="1100" MinHeight="650"
        Background="#E6E6E6">
    <Grid Margin="12"
          ColumnDefinitions="300,*,340"
          RowDefinitions="Auto,*,Auto"
          ColumnSpacing="12"
          RowSpacing="10">
        <!-- LEFT: selectors -->
        <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="3" Classes="panel">
            <Grid RowDefinitions="Auto,*,Auto" RowSpacing="8">
                <TextBlock Text="Нажатия CSS selector" Classes="h1"/>

                <Border Grid.Row="1" Background="#FFFFFF" BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="4" Padding="6">
                    <ListBox ItemsSource="{Binding Steps}"
                             SelectedItem="{Binding SelectedStep, Mode=TwoWay}">
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="x:String">
                                <TextBox Text="{Binding ., Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>

                <Grid Grid.Row="2" ColumnDefinitions="*,*,*,*" ColumnSpacing="8">
                    <Button Grid.Column="0" Content="+ Добавить" Command="{Binding AddStepCommand}"/>
                    <Button Grid.Column="1" Content="Удалить" Command="{Binding RemoveStepCommand}"/>
                    <Button Grid.Column="2" Content="Вверх" Command="{Binding MoveUpCommand}"/>
                    <Button Grid.Column="3" Content="Вниз" Command="{Binding MoveDownCommand}"/>
                </Grid>
            </Grid>
        </Border>

        <!-- CENTER TOP: settings + controls -->
        <Border Grid.Column="1" Grid.Row="0" Classes="panel">
            <StackPanel Spacing="10">
                <Grid ColumnDefinitions="Auto,*,Auto,160" ColumnSpacing="10">
                    <TextBlock Grid.Column="0" Text="Ссылка:" Classes="label"/>
                    <TextBox Grid.Column="1" Text="{Binding TargetUrl, Mode=TwoWay}" Watermark="https://example.com"/>

                    <TextBlock Grid.Column="2" Text="Вид тестирования:" Classes="label"/>
                    <ComboBox Grid.Column="3"
                              ItemsSource="{Binding TestTypes}"
                              SelectedItem="{Binding SelectedTestType, Mode=TwoWay}"/>
                </Grid>

                <WrapPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,14,0">
                        <TextBlock Text="Всего прогонов:" Classes="label"/>
                        <TextBox Width="110" Text="{Binding TotalRuns, Mode=TwoWay}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,14,0">
                        <TextBlock Text="Параллельно (1–50):" Classes="label"/>
                        <TextBox Width="90" Text="{Binding Concurrency, Mode=TwoWay}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Таймаут (сек):" Classes="label"/>
                        <TextBox Width="90" Text="{Binding TimeoutSeconds, Mode=TwoWay}"/>
                    </StackPanel>
                </WrapPanel>

                <WrapPanel>
                    <CheckBox Content="Запуск браузера без UI" IsChecked="{Binding Headless, Mode=TwoWay}" Margin="0,0,4,0"/>
                    <CheckBox Content="Скриншот после прогона" IsChecked="{Binding ScreenshotAfterRun, Mode=TwoWay}"/>

                    <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                        <TextBlock Text="Политика ошибки шага:" Classes="label"/>
                        <ComboBox ItemsSource="{Binding StepErrorPolicies}"
                                  SelectedItem="{Binding ErrorPolicy, Mode=TwoWay}"
                                  MinWidth="210"/>
                    </StackPanel>
                </WrapPanel>

                <StackPanel Spacing="6" Orientation="Horizontal">
                    <TextBlock Text="Stress: шаг" Classes="label"/>
                    <TextBox Width="70" Text="{Binding RampStep, Mode=TwoWay}" IsEnabled="{Binding IsStressMode}"/>
                    <TextBlock Text="Пауза (сек)" Classes="label"/>
                    <TextBox Width="70" Text="{Binding RampDelaySeconds, Mode=TwoWay}" IsEnabled="{Binding IsStressMode}"/>
                    <TextBlock Text="Runs/level" Classes="label"/>
                    <TextBox Width="80" Text="{Binding RunsPerLevel, Mode=TwoWay}" IsEnabled="{Binding IsStressMode}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Endurance: минут" Classes="label"/>
                    <TextBox Width="90" Text="{Binding DurationMinutes, Mode=TwoWay}" IsEnabled="{Binding IsEnduranceMode}"/>
                </StackPanel>

                <WrapPanel>
                    <Button Content="Начать" Command="{Binding StartCommand}" Margin="0,0,10,0"/>
                    <Button Content="Стоп" Command="{Binding StopCommand}" Margin="0,0,10,0"/>
                    <Button Content="Очистить лог" Command="{Binding ClearLogCommand}" Margin="0,0,10,0"/>
                </WrapPanel>
            </StackPanel>
        </Border>

        <!-- CENTER: log -->
        <Border Grid.Column="1" Grid.Row="1" Classes="panel">
            <Grid RowDefinitions="Auto,*" RowSpacing="8">
                <TextBlock Text="Лог выполнения" Classes="h1"/>

                <Border Grid.Row="1" Classes="logbox">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ListBox x:Name="LogListBox" ItemsSource="{Binding LogEntries}" Classes="loglist">
                            <ListBox.ItemTemplate>
                                <DataTemplate x:DataType="x:String">
                                    <TextBlock Classes="logline" Text="{Binding}"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>

        <!-- RIGHT: Telegram Settings -->
        <Border Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" Classes="panel">
            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,*"
                  ColumnDefinitions="Auto,*"
                  ColumnSpacing="10"
                  RowSpacing="10">
                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Настройки Telegram" Classes="h1"/>

                <CheckBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Content="Отправлять в Telegram" IsChecked="{Binding TelegramEnabled, Mode=TwoWay}"/>
                <CheckBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Content="Отправлять Скриншоты" IsChecked="{Binding TelegramSendScreens, Mode=TwoWay}"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Режим:" Classes="label"/>
                <ComboBox Grid.Row="3" Grid.Column="1" SelectedIndex="{Binding TelegramMode, Mode=TwoWay}" MinWidth="180">
                    <ComboBoxItem>Каждый прогон</ComboBoxItem>
                    <ComboBoxItem>Только при ошибке</ComboBoxItem>
                    <ComboBoxItem>Только финальный</ComboBoxItem>
                </ComboBox>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Токен бота:" Classes="label"/>
                <TextBox Grid.Row="4" Grid.Column="1" Watermark="123456:ABC-DEF..." Text="{Binding TelegramToken, Mode=TwoWay}"/>

                <TextBlock Grid.Row="5" Grid.Column="0" Text="ID чата:" Classes="label"/>
                <TextBox Grid.Row="5" Grid.Column="1" Watermark="-1001234567890" Text="{Binding TelegramChatId, Mode=TwoWay}"/>

                <TextBlock Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Foreground="#666" Text="Отправка сообщений добавляется через TelegramSettings."/>
            </Grid>
        </Border>

        <!-- STATUS BAR -->
        <Border Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2"
                Background="#F2F2F2"
                BorderBrush="#C8C8C8"
                BorderThickness="1"
                CornerRadius="6"
                Padding="8">
            <DockPanel>
                <TextBlock Text="{Binding StatusText}" Foreground="#333"/>
                <TextBlock DockPanel.Dock="Right" Text="{Binding ProgressText}" Foreground="#333"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>
