<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WebLoadTester.Presentation.ViewModels"
        xmlns:tabs="clr-namespace:WebLoadTester.Presentation.Views.Tabs"
        xmlns:behaviors="clr-namespace:WebLoadTester.Presentation.Common.Behaviors"
        x:Class="WebLoadTester.Presentation.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="WebLoadTester"
        Width="1280" Height="760"
        Background="{DynamicResource PageBackground}">
    <Grid RowDefinitions="*,Auto">
        <Grid Grid.Row="0" Margin="24" HorizontalAlignment="Center" MaxWidth="1400" RowDefinitions="Auto,*" RowSpacing="16">
            <Border Grid.Row="0" Classes="app-bar">
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="20">
                    <StackPanel Spacing="4">
                        <TextBlock Text="WebLoadTester" Classes="page-title" />
                        <TextBlock Text="Панель управления" Classes="muted" />
                    </StackPanel>
                    <WrapPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                        <Button Classes="secondary toolbar-button" Margin="0,0,8,0" Content="Настройки" Command="{Binding OpenSettingsCommand}" />
                        <Button Classes="secondary toolbar-button" Margin="0,0,8,0" Content="Папка прогонов" Command="{Binding OpenRunsFolderCommand}" />
                        <Border Classes="badge" Margin="0,0,8,0" VerticalAlignment="Center">
                            <TextBlock Text="{Binding DatabaseStatus, StringFormat='DB: {0}'}" FontSize="12" FontWeight="SemiBold" TextTrimming="CharacterEllipsis" />
                        </Border>
                        <Border Classes="badge" Margin="0,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="{Binding TelegramStatus, StringFormat='Telegram: {0}'}" FontSize="12" FontWeight="SemiBold" TextTrimming="CharacterEllipsis" />
                        </Border>
                    </WrapPanel>
                </Grid>
            </Border>

            <Border Grid.Row="1" Classes="section" Padding="20">
                <TabControl Classes="main-tabs" SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}">
                    <TabItem Header="UI тестирование">
                        <tabs:UiTestingTab DataContext="{Binding UiFamily}" />
                    </TabItem>
                    <TabItem Header="HTTP тестирование">
                        <tabs:HttpTestingTab DataContext="{Binding HttpFamily}" />
                    </TabItem>
                    <TabItem Header="Сеть и безопасность">
                        <tabs:NetSecTab DataContext="{Binding NetFamily}" />
                    </TabItem>
                    <TabItem Header="Прогоны">
                        <tabs:RunsTab DataContext="{Binding RunsTab}" />
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>

        <Border Grid.Row="1" Margin="24,0,24,24" HorizontalAlignment="Center" MaxWidth="1400" Classes="section" Padding="12">
            <Expander IsExpanded="{Binding IsLogDrawerExpanded}">
                <Expander.Header>
                    <Grid RowDefinitions="Auto,Auto" RowSpacing="8">
                        <TextBlock Text="Лог выполнения" VerticalAlignment="Center" FontWeight="SemiBold" />
                        <WrapPanel Grid.Row="1" Orientation="Horizontal">
                            <CheckBox Margin="0,0,12,0" Content="Автоскролл" IsChecked="{Binding LogAutoScroll, Mode=TwoWay}" />
                            <CheckBox Margin="0,0,12,0" Content="Только ошибки" IsChecked="{Binding LogOnlyErrors, Mode=TwoWay}" />
                            <Button Classes="link" Margin="0,0,8,0" Content="Очистить" Command="{Binding ClearLogCommand}" />
                            <Button Classes="link" Margin="0,0,0,0" Content="Копировать" Command="{Binding CopyLogCommand}" />
                        </WrapPanel>
                    </Grid>
                </Expander.Header>

                <Border Classes="log-box" MinHeight="220" MaxHeight="360" Margin="0,8,0,0">
                    <ListBox ItemsSource="{Binding FilteredLogEntries}"
                             Classes="loglist"
                             behaviors:AutoScrollBehavior.IsEnabled="{Binding LogAutoScroll}">
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="x:String">
                                <TextBlock Classes="logline" Text="{Binding}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>
            </Expander>
        </Border>
    </Grid>
</Window>
