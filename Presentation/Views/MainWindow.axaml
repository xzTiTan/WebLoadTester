<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WebLoadTester.Presentation.ViewModels"
        xmlns:tabs="clr-namespace:WebLoadTester.Presentation.Views.Tabs"
        x:Class="WebLoadTester.Presentation.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="WebLoadTester"
        Width="1280" Height="760"
        Background="#E6E6E6">
    <Grid Margin="12" RowDefinitions="Auto,*" RowSpacing="10">
        <Border Grid.Row="0" Classes="panel">
            <WrapPanel ItemSpacing="12" LineSpacing="8">
                <Button Content="Настройки" Command="{Binding OpenSettingsCommand}" />
                <TextBlock Text="{Binding DatabaseStatus}" VerticalAlignment="Center" />
                <TextBlock Text="{Binding TelegramStatus}" VerticalAlignment="Center" />
                <Button Content="Папка прогонов" Command="{Binding OpenRunsFolderCommand}" />
            </WrapPanel>
        </Border>

        <TabControl Grid.Row="1" SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}">
            <TabItem Header="UI тестирование">
                <tabs:UiTestingTab DataContext="{Binding UiFamily}" />
            </TabItem>
            <TabItem Header="HTTP тестирование">
                <tabs:HttpTestingTab DataContext="{Binding HttpFamily}" />
            </TabItem>
            <TabItem Header="Сеть и безопасность">
                <tabs:NetSecTab DataContext="{Binding NetFamily}" />
            </TabItem>
            <TabItem Header="Прогоны">
                <tabs:RunsTab DataContext="{Binding RunsTab}" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
