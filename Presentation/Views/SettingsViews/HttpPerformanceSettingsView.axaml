<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WebLoadTester.Presentation.ViewModels.SettingsViewModels"
             x:Class="WebLoadTester.Presentation.Views.SettingsViews.HttpPerformanceSettingsView"
             x:DataType="vm:HttpPerformanceSettingsViewModel">
    <StackPanel Spacing="8">
        <TextBlock Text="Настройки HTTP производительности" Classes="h1" />
        <TextBlock Text="URL" Classes="label" />
        <TextBox Text="{Binding Url, Mode=TwoWay}" />
        <WrapPanel>
            <StackPanel Classes="field-block">
                <TextBlock Text="Всего запросов" Classes="label" />
                <TextBox Classes="compact" Text="{Binding TotalRequests, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
            </StackPanel>
            <StackPanel Classes="field-block">
                <TextBlock Text="Параллельность" Classes="label" />
                <TextBox Classes="compact" Text="{Binding Concurrency, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
            </StackPanel>
            <StackPanel Classes="field-block">
                <TextBlock Text="Ограничение RPS" Classes="label" />
                <TextBox Classes="compact" Text="{Binding RpsLimit, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
            </StackPanel>
            <StackPanel Classes="field-block">
                <TextBlock Text="Таймаут (сек)" Classes="label" />
                <TextBox Classes="compact" Text="{Binding TimeoutSeconds, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
            </StackPanel>
        </WrapPanel>
    </StackPanel>
</UserControl>
