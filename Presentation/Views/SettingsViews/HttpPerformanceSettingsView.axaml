<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="WebLoadTester.Presentation.Views.SettingsViews.HttpPerformanceSettingsView">
    <ScrollViewer>
        <StackPanel Spacing="8">
            <TextBlock Text="HTTP Performance Settings" Classes="h1" />
            <TextBlock Text="URL" Classes="label" />
            <TextBox Text="{Binding Url}" />
            <TextBlock Text="Method" Classes="label" />
            <TextBox Text="{Binding Method}" />
            <StackPanel Orientation="Horizontal" Spacing="8">
                <StackPanel>
                    <TextBlock Text="Total Requests" Classes="label" />
                    <TextBox Text="{Binding TotalRequests}" />
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Concurrency" Classes="label" />
                    <TextBox Text="{Binding Concurrency}" />
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="RPS Limit" Classes="label" />
                    <TextBox Text="{Binding RpsLimit}" />
                </StackPanel>
            </StackPanel>
            <TextBlock Text="Timeout (sec)" Classes="label" />
            <TextBox Text="{Binding TimeoutSeconds}" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
