<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WebLoadTester.Presentation.ViewModels.SettingsViewModels"
             xmlns:dg="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.DataGrid"
             x:Class="WebLoadTester.Presentation.Views.SettingsViews.HttpAssetsSettingsView"
             x:DataType="vm:HttpAssetsSettingsViewModel">
    <StackPanel Spacing="8">
        <TextBlock Text="Настройки HTTP ассетов" Classes="h1" />
        <TextBlock Text="Base URL" Classes="label" />
        <TextBox Text="{Binding BaseUrl, Mode=TwoWay}" />
        <TextBlock Text="Ассеты (пути относительно Base URL)" Classes="label" />
        <dg:DataGrid ItemsSource="{Binding Assets}"
                     SelectedItem="{Binding SelectedAsset, Mode=TwoWay}"
                     AutoGenerateColumns="False"
                     Height="200">
            <dg:DataGrid.Columns>
                <dg:DataGridTextColumn Header="Path" Binding="{Binding Path}" Width="2*" />
                <dg:DataGridTextColumn Header="ContentType" Binding="{Binding ExpectedContentType}" Width="*" />
                <dg:DataGridTextColumn Header="MaxSizeBytes" Binding="{Binding MaxSizeBytes}" Width="*" />
                <dg:DataGridTextColumn Header="MaxLatencyMs" Binding="{Binding MaxLatencyMs}" Width="*" />
            </dg:DataGrid.Columns>
        </dg:DataGrid>
        <StackPanel Classes="section-actions">
            <Button Content="Добавить" Command="{Binding AddAssetCommand}" />
            <Button Content="Удалить" Command="{Binding RemoveSelectedAssetCommand}" />
        </StackPanel>
        <TextBlock Text="Таймаут (сек)" Classes="label" />
        <TextBox Classes="compact" Text="{Binding TimeoutSeconds, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
    </StackPanel>
</UserControl>
