<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WebLoadTester.Presentation.ViewModels.SettingsViewModels"
             xmlns:domain="clr-namespace:WebLoadTester.Modules.HttpAssets"
             x:Class="WebLoadTester.Presentation.Views.SettingsViews.HttpAssetsSettingsView"
             x:DataType="vm:HttpAssetsSettingsViewModel">
    <StackPanel Spacing="8">
        <TextBlock Text="Настройки HTTP ассетов" Classes="h1" />
        <TextBlock Text="Ассеты" Classes="label" />
        <ItemsControl ItemsSource="{Binding Assets}">
            <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="domain:AssetItem">
                    <TextBlock Text="{Binding Url}" TextWrapping="Wrap" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <TextBlock Text="Таймаут (сек)" Classes="label" />
        <TextBox Width="120" Text="{Binding TimeoutSeconds, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
    </StackPanel>
</UserControl>
