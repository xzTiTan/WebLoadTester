<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WebLoadTester.Presentation.ViewModels.SettingsViewModels"
             xmlns:dg="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.DataGrid"
             x:Class="WebLoadTester.Presentation.Views.SettingsViews.HttpAssetsSettingsView"
             x:DataType="vm:HttpAssetsSettingsViewModel">
    <StackPanel Spacing="16">
        <Border Classes="section">
            <StackPanel Spacing="8">
                <TextBlock Text="Базовые настройки" Classes="section-title" />
                <Grid ColumnDefinitions="{StaticResource FieldRowColumns}" Classes="field-row">
                    <TextBlock Text="Базовый URL" Classes="field-label" />
                    <TextBox Classes="field-control" Text="{Binding BaseUrl, Mode=TwoWay}" />
                </Grid>
                <Grid ColumnDefinitions="{StaticResource FieldRowColumns}" Classes="field-row">
                    <TextBlock Text="Таймаут (сек)" Classes="field-label" />
                    <TextBox Classes="field-control" Text="{Binding TimeoutSeconds, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                </Grid>
            </StackPanel>
        </Border>

        <Border Classes="section">
            <StackPanel Spacing="8">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Text="Ассеты" Classes="section-title" />
                    <WrapPanel Grid.Column="1" Classes="toolbar-wrap">
                        <Button Margin="0,0,8,8" Content="Добавить" Command="{Binding AddAssetCommand}" />
                        <Button Margin="0,0,8,8" Content="Удалить" Command="{Binding RemoveSelectedAssetCommand}" />
                    </WrapPanel>
                </Grid>
                <dg:DataGrid ItemsSource="{Binding Assets}"
                             SelectedItem="{Binding SelectedAsset, Mode=TwoWay}"
                             AutoGenerateColumns="False"
                             Classes="list-min-180">
                    <dg:DataGrid.Columns>
                        <dg:DataGridTextColumn Header="Путь" Binding="{Binding Path}" Width="2*" />
                        <dg:DataGridTextColumn Header="Тип контента" Binding="{Binding ExpectedContentType}" Width="*" />
                        <dg:DataGridTextColumn Header="Макс. размер, байт" Binding="{Binding MaxSizeBytes}" Width="*" />
                        <dg:DataGridTextColumn Header="Макс. задержка, мс" Binding="{Binding MaxLatencyMs}" Width="*" />
                    </dg:DataGrid.Columns>
                </dg:DataGrid>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
