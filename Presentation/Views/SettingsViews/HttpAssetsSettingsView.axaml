<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WebLoadTester.Presentation.ViewModels.SettingsViewModels"
             xmlns:dg="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.DataGrid"
             x:Class="WebLoadTester.Presentation.Views.SettingsViews.HttpAssetsSettingsView"
             x:DataType="vm:HttpAssetsSettingsViewModel">
    <StackPanel Spacing="16">
        <Border Classes="section">
            <StackPanel Spacing="8">
                <TextBlock Text="Базовые настройки" Classes="section-title" />
                <Grid ColumnDefinitions="{StaticResource FieldRowColumns}" Classes="field-row">
                    <TextBlock Text="Таймаут (сек)" Classes="field-label" />
                    <NumericUpDown Classes="field-control" Minimum="1" Value="{Binding TimeoutSeconds, Mode=TwoWay}" />
                </Grid>
            </StackPanel>
        </Border>

        <Border Classes="section">
            <StackPanel Spacing="8">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Text="Ассеты" Classes="section-title" />
                    <WrapPanel Grid.Column="1" Classes="wrap-gap">
                        <Button Content="Добавить" Command="{Binding AddAssetCommand}" />
                        <Button Content="Удалить" Command="{Binding RemoveSelectedAssetCommand}" />
                        <Button Content="Дублировать" Command="{Binding DuplicateSelectedAssetCommand}" />
                    </WrapPanel>
                </Grid>
                <dg:DataGrid ItemsSource="{Binding Assets}"
                             SelectedItem="{Binding SelectedAsset, Mode=TwoWay}"
                             AutoGenerateColumns="False"
                             Classes="list-min-180">
                    <dg:DataGrid.Columns>
                        <dg:DataGridTextColumn Header="URL" Binding="{Binding Url}" Width="2*" />
                        <dg:DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                        <dg:DataGridTextColumn Header="Ожидаемый тип" Binding="{Binding ExpectedContentType}" Width="*" />
                        <dg:DataGridTextColumn Header="Макс. размер, КБ" Binding="{Binding MaxSizeKb}" Width="*" />
                        <dg:DataGridTextColumn Header="Макс. задержка, мс" Binding="{Binding MaxLatencyMs}" Width="*" />
                    </dg:DataGrid.Columns>
                </dg:DataGrid>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
