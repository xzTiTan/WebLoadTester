<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WebLoadTester.Presentation.ViewModels.SettingsViewModels"
             xmlns:rows="clr-namespace:WebLoadTester.Presentation.ViewModels.SettingsViewModels.HttpAssets"
             xmlns:controls="clr-namespace:WebLoadTester.Presentation.Views.Controls"
             x:Class="WebLoadTester.Presentation.Views.SettingsViews.HttpAssetsSettingsView"
             x:DataType="vm:HttpAssetsSettingsViewModel">
    <UserControl.DataTemplates>
        <DataTemplate x:DataType="rows:AssetRowViewModel">
            <StackPanel Spacing="2" Margin="0,0,0,6">
                <Grid ColumnDefinitions="160,3*,180,96,110" ColumnSpacing="6">
                    <TextBox Grid.Column="0" Text="{Binding Name, Mode=TwoWay}" Watermark="Имя" />
                    <TextBox Grid.Column="1" Text="{Binding Url, Mode=TwoWay}" Watermark="https://пример.рф/ресурс" />
                    <TextBox Grid.Column="2" Text="{Binding ExpectedContentType, Mode=TwoWay}" Watermark="image/png" />
                    <NumericUpDown Grid.Column="3" Minimum="0" Maximum="1048576" Value="{Binding MaxSizeKb, Mode=TwoWay}" />
                    <NumericUpDown Grid.Column="4" Minimum="0" Maximum="600000" Value="{Binding MaxLatencyMs, Mode=TwoWay}" />
                </Grid>
                <TextBlock Text="{Binding RowErrorText}" IsVisible="{Binding HasRowError}" Classes="error" />
            </StackPanel>
        </DataTemplate>
    </UserControl.DataTemplates>

    <StackPanel Spacing="16">
        <Border Classes="section">
            <StackPanel Spacing="8">
                <TextBlock Text="Базовые настройки" Classes="section-title" />
                <Grid ColumnDefinitions="{StaticResource FieldRowColumns}" Classes="field-row">
                    <TextBlock Text="Таймаут (сек)" Classes="field-label" />
                    <NumericUpDown Classes="field-control" Minimum="1" Value="{Binding TimeoutSeconds, Mode=TwoWay}" />
                </Grid>
            </StackPanel>
        </Border>

        <Border Classes="section">
            <StackPanel Spacing="8">
                <TextBlock Text="Ассеты" Classes="section-title" />
                <controls:RowListEditorView DataContext="{Binding AssetsEditor}" />
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
