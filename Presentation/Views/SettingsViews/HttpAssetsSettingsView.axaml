<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="WebLoadTester.Presentation.Views.SettingsViews.HttpAssetsSettingsView">
    <ScrollViewer>
        <StackPanel Spacing="8">
            <TextBlock Text="HTTP Assets Settings" Classes="h1" />
            <TextBlock Text="Assets" Classes="label" />
            <ItemsControl ItemsSource="{Binding Assets}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBox Text="{Binding .}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <StackPanel Orientation="Horizontal" Spacing="8">
                <StackPanel>
                    <TextBlock Text="Expected Content-Type" Classes="label" />
                    <TextBox Text="{Binding ExpectedContentType}" />
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Max Size (bytes)" Classes="label" />
                    <TextBox Text="{Binding MaxSizeBytes}" />
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Max Latency (ms)" Classes="label" />
                    <TextBox Text="{Binding MaxLatencyMs}" />
                </StackPanel>
            </StackPanel>
            <TextBlock Text="Timeout (sec)" Classes="label" />
            <TextBox Text="{Binding TimeoutSeconds}" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
