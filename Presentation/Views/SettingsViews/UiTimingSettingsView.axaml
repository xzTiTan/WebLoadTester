<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WebLoadTester.Presentation.ViewModels.SettingsViewModels"
             x:Class="WebLoadTester.Presentation.Views.SettingsViews.UiTimingSettingsView"
             x:DataType="vm:UiTimingSettingsViewModel">
    <StackPanel Spacing="8">
        <TextBlock Text="UI Timing Settings" Classes="h1" />
        <TextBlock Text="URLs" Classes="label" />
        <ItemsControl ItemsSource="{Binding Urls}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <StackPanel Orientation="Horizontal" Spacing="8">
            <StackPanel>
                <TextBlock Text="Repeats" Classes="label" />
                <TextBox Width="120" Text="{Binding RepeatsPerUrl, Mode=TwoWay}" />
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Concurrency" Classes="label" />
                <TextBox Width="120" Text="{Binding Concurrency, Mode=TwoWay}" />
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Wait Until" Classes="label" />
                <ComboBox Width="140" SelectedItem="{Binding WaitUntil, Mode=TwoWay}">
                    <ComboBoxItem>load</ComboBoxItem>
                    <ComboBoxItem>domcontentloaded</ComboBoxItem>
                </ComboBox>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
