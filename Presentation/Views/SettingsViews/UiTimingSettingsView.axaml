<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WebLoadTester.Presentation.ViewModels.SettingsViewModels"
             x:Class="WebLoadTester.Presentation.Views.SettingsViews.UiTimingSettingsView"
             x:DataType="vm:UiTimingSettingsViewModel">
    <StackPanel Spacing="8">
        <TextBlock Text="Настройки UI таймингов" Classes="h1" />
        <TextBlock Text="Base URL" Classes="label" />
        <TextBox Text="{Binding BaseUrl, Mode=TwoWay}" />
        <TextBlock Text="Пути (относительно Base URL)" Classes="label" />
        <DataGrid ItemsSource="{Binding Paths}"
                  SelectedItem="{Binding SelectedPath, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  Height="160">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Path" Binding="{Binding}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" Spacing="6">
            <Button Content="Добавить" Command="{Binding AddPathCommand}" />
            <Button Content="Удалить" Command="{Binding RemoveSelectedPathCommand}" />
        </StackPanel>

        <WrapPanel>
            <StackPanel Width="150" Margin="0,0,8,8">
                <TextBlock Text="Повторы" Classes="label" />
                <TextBox Width="120" Text="{Binding RepeatsPerUrl, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
            </StackPanel>
            <StackPanel Width="150" Margin="0,0,8,8">
                <TextBlock Text="Параллельность" Classes="label" />
                <TextBox Width="120" Text="{Binding Concurrency, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
            </StackPanel>
            <StackPanel Width="170" Margin="0,0,8,8">
                <TextBlock Text="Ожидать до" Classes="label" />
                <ComboBox Width="140" SelectedItem="{Binding WaitUntil, Mode=TwoWay}">
                    <ComboBoxItem>load</ComboBoxItem>
                    <ComboBoxItem>domcontentloaded</ComboBoxItem>
                </ComboBox>
            </StackPanel>
        </WrapPanel>
    </StackPanel>
</UserControl>
