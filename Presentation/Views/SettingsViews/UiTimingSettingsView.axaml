<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WebLoadTester.Presentation.ViewModels.SettingsViewModels"
             xmlns:dg="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.DataGrid"
             x:Class="WebLoadTester.Presentation.Views.SettingsViews.UiTimingSettingsView"
             x:DataType="vm:UiTimingSettingsViewModel">
    <StackPanel Spacing="8">
        <TextBlock Text="Настройки UI таймингов" Classes="h1" />
        <TextBlock Text="URL-адреса" Classes="label" />
        <dg:DataGrid ItemsSource="{Binding Targets}"
                     SelectedItem="{Binding SelectedTarget, Mode=TwoWay}"
                     AutoGenerateColumns="False"
                     Height="160">
            <dg:DataGrid.Columns>
                <dg:DataGridTextColumn Header="URL" Binding="{Binding Url}" Width="2*" />
                <dg:DataGridTextColumn Header="Tag" Binding="{Binding Tag}" Width="*" />
            </dg:DataGrid.Columns>
        </dg:DataGrid>
        <StackPanel Classes="section-actions">
            <Button Content="Добавить" Command="{Binding AddTargetCommand}" />
            <Button Content="Удалить" Command="{Binding RemoveSelectedTargetCommand}" />
            <Button Content="Очистить" Command="{Binding ClearTargetsCommand}" />
        </StackPanel>

        <TextBlock Text="Параметры тайминга" Classes="label" />
        <WrapPanel>
            <StackPanel Classes="field-block">
                <TextBlock Text="WaitUntil" Classes="label" />
                <ComboBox ItemsSource="{Binding WaitUntilOptions}"
                          SelectedItem="{Binding WaitUntil, Mode=TwoWay}" />
            </StackPanel>
            <StackPanel Classes="field-block">
                <TextBlock Text="RepeatsPerUrl" Classes="label" />
                <NumericUpDown Minimum="1" Value="{Binding RepeatsPerUrl, Mode=TwoWay}" Classes="compact" />
            </StackPanel>
            <StackPanel Classes="field-block">
                <TextBlock Text="Concurrency" Classes="label" />
                <NumericUpDown Minimum="1" Value="{Binding Concurrency, Mode=TwoWay}" Classes="compact" />
            </StackPanel>
            <StackPanel Classes="field-block">
                <TextBlock Text="Headless" Classes="label" />
                <CheckBox Content="Включено" IsChecked="{Binding Headless, Mode=TwoWay}" />
            </StackPanel>
            <StackPanel Classes="field-block">
                <TextBlock Text="Timeout (ms)" Classes="label" />
                <NumericUpDown Minimum="1000" Increment="1000" Value="{Binding TimeoutMs, Mode=TwoWay}" Classes="compact" />
            </StackPanel>
        </WrapPanel>
    </StackPanel>
</UserControl>
