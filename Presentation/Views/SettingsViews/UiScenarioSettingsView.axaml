<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WebLoadTester.Presentation.ViewModels.SettingsViewModels"
             xmlns:domain="clr-namespace:WebLoadTester.Modules.UiScenario"
             x:Class="WebLoadTester.Presentation.Views.SettingsViews.UiScenarioSettingsView"
             x:DataType="vm:UiScenarioSettingsViewModel"
             x:Name="Root">
    <StackPanel Spacing="16">
        <Border Classes="section">
            <StackPanel Spacing="8">
                <TextBlock Text="Параметры сценария" Classes="section-title" />
                <Grid ColumnDefinitions="{StaticResource FieldRowColumns}" Classes="field-row">
                    <TextBlock Text="Стартовый URL" Classes="field-label" />
                    <TextBox Classes="field-control" Watermark="https://example.com" Text="{Binding TargetUrl, Mode=TwoWay}" />
                </Grid>
                <Grid ColumnDefinitions="{StaticResource FieldRowColumns}" Classes="field-row">
                    <TextBlock Text="Политика ошибок" Classes="field-label" />
                    <ComboBox Classes="field-control"
                              ItemsSource="{Binding ErrorPolicyOptions}"
                              SelectedItem="{Binding ErrorPolicy, Mode=TwoWay}" />
                </Grid>
            </StackPanel>
        </Border>

        <Border Classes="section">
            <StackPanel Spacing="8">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Text="Шаги сценария" Classes="section-title" />
                    <WrapPanel Grid.Column="1" Classes="toolbar-wrap">
                        <Button Margin="0,0,8,8" Content="+ Добавить шаг" Command="{Binding AddStepCommand}" />
                    </WrapPanel>
                </Grid>
                <TextBlock Text="Если текст заполнен — выполняется ввод, иначе будет клик по селектору."
                           Classes="status-line" />
                <ItemsControl ItemsSource="{Binding Steps}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="domain:UiStep">
                            <Border Classes="step-card">
                                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                                    <StackPanel Spacing="8">
                                        <TextBox Watermark="Селектор элемента (CSS/XPath)"
                                                 Text="{Binding Selector, Mode=TwoWay}" />
                                        <TextBox Watermark="Текст для ввода (если нужно)"
                                                 Text="{Binding Text, Mode=TwoWay}" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Spacing="6" VerticalAlignment="Top">
                                        <Button Content="Вверх"
                                                Command="{Binding DataContext.MoveStepUpCommand, ElementName=Root}"
                                                CommandParameter="{Binding}" />
                                        <Button Content="Вниз"
                                                Command="{Binding DataContext.MoveStepDownCommand, ElementName=Root}"
                                                CommandParameter="{Binding}" />
                                        <Button Content="Удалить" Classes="danger"
                                                Command="{Binding DataContext.RemoveStepCommand, ElementName=Root}"
                                                CommandParameter="{Binding}" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
