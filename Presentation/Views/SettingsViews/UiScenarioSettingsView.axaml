<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WebLoadTester.Presentation.ViewModels.SettingsViewModels"
             xmlns:dg="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.DataGrid"
             x:Class="WebLoadTester.Presentation.Views.SettingsViews.UiScenarioSettingsView"
             x:DataType="vm:UiScenarioSettingsViewModel"
             x:Name="Root">
    <StackPanel Spacing="8">
        <TextBlock Text="Настройки UI сценария" Classes="h1" />
        <TextBlock Text="Start URL" Classes="label" />
        <TextBox Text="{Binding TargetUrl, Mode=TwoWay}" />

        <TextBlock Text="Параметры запуска" Classes="label" />
        <WrapPanel>
            <StackPanel Width="160" Margin="0,0,8,8">
                <TextBlock Text="Concurrency/VUs" Classes="label" />
                <NumericUpDown Minimum="1" Value="{Binding Concurrency, Mode=TwoWay}" />
            </StackPanel>
            <StackPanel Width="160" Margin="0,0,8,8">
                <TextBlock Text="Iterations" Classes="label" />
                <NumericUpDown Minimum="1" Value="{Binding TotalRuns, Mode=TwoWay}" />
            </StackPanel>
            <StackPanel Width="160" Margin="0,0,8,8">
                <TextBlock Text="Timeout (ms)" Classes="label" />
                <NumericUpDown Minimum="100" Increment="100" Value="{Binding TimeoutMs, Mode=TwoWay}" />
            </StackPanel>
        </WrapPanel>
        <StackPanel Orientation="Horizontal" Spacing="12">
            <CheckBox Content="Headless" IsChecked="{Binding Headless, Mode=TwoWay}" />
            <StackPanel Width="200">
                <TextBlock Text="Скриншоты" Classes="label" />
                <ComboBox ItemsSource="{Binding ScreenshotModeOptions}"
                          SelectedItem="{Binding ScreenshotMode, Mode=TwoWay}" />
            </StackPanel>
            <StackPanel Width="200">
                <TextBlock Text="Политика ошибок шага" Classes="label" />
                <ComboBox ItemsSource="{Binding ErrorPolicyOptions}"
                          SelectedItem="{Binding ErrorPolicy, Mode=TwoWay}" />
            </StackPanel>
        </StackPanel>

        <TextBlock Text="Шаги" Classes="label" />
        <dg:DataGrid ItemsSource="{Binding Steps}"
                     SelectedItem="{Binding SelectedStep, Mode=TwoWay}"
                     AutoGenerateColumns="False"
                     Height="200">
            <dg:DataGrid.Columns>
                <dg:DataGridTemplateColumn Header="Type" Width="160">
                    <dg:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Action}" />
                        </DataTemplate>
                    </dg:DataGridTemplateColumn.CellTemplate>
                    <dg:DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate x:DataType="{x:Null}">
                            <ComboBox ItemsSource="{Binding DataContext.ActionOptions, ElementName=Root}"
                                      SelectedItem="{Binding Action, Mode=TwoWay}" />
                        </DataTemplate>
                    </dg:DataGridTemplateColumn.CellEditingTemplate>
                </dg:DataGridTemplateColumn>
                <dg:DataGridTextColumn Header="Selector" Binding="{Binding Selector}" Width="2*" />
                <dg:DataGridTextColumn Header="Value" Binding="{Binding Text}" Width="2*" />
                <dg:DataGridTextColumn Header="TimeoutMs" Binding="{Binding TimeoutMs}" Width="120" />
                <dg:DataGridTextColumn Header="DelayMs" Binding="{Binding DelayMs}" Width="120" />
            </dg:DataGrid.Columns>
        </dg:DataGrid>
        <StackPanel Orientation="Horizontal" Spacing="6">
            <Button Content="Добавить" Command="{Binding AddStepCommand}" />
            <Button Content="Удалить" Command="{Binding RemoveSelectedStepCommand}" />
            <Button Content="Вверх" Command="{Binding MoveStepUpCommand}" />
            <Button Content="Вниз" Command="{Binding MoveStepDownCommand}" />
        </StackPanel>

        <Border Classes="panel"
                IsVisible="{Binding SelectedStep.Action, Converter={StaticResource EnumEqualsConverter}, ConverterParameter=Click}">
            <StackPanel Spacing="8">
                <TextBlock Text="Селекторы для клика (CSS)" Classes="label" />
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <TextBox Width="320"
                             Text="{Binding NewClickSelectorText, Mode=TwoWay}"
                             Watermark="например: button.submit" />
                    <Button Content="Добавить" Command="{Binding AddClickSelectorCommand}" />
                </StackPanel>
                <ListBox ItemsSource="{Binding SelectedStep.ClickSelectors}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <DockPanel LastChildFill="True" Margin="4,2">
                                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Spacing="4">
                                    <Button Content="Вверх"
                                            Command="{Binding DataContext.MoveClickSelectorUpCommand, ElementName=Root}"
                                            CommandParameter="{Binding}" />
                                    <Button Content="Вниз"
                                            Command="{Binding DataContext.MoveClickSelectorDownCommand, ElementName=Root}"
                                            CommandParameter="{Binding}" />
                                    <Button Content="Удалить"
                                            Command="{Binding DataContext.RemoveClickSelectorCommand, ElementName=Root}"
                                            CommandParameter="{Binding}" />
                                </StackPanel>
                                <TextBlock Text="{Binding}" VerticalAlignment="Center" />
                            </DockPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <TextBlock Text="Селекторы проверяются по порядку сверху вниз. Первый найденный будет использован для клика."
                           FontSize="12"
                           Foreground="#666666" />
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
