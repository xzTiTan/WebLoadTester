<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WebLoadTester.Presentation.ViewModels.SettingsViewModels"
             xmlns:domain="clr-namespace:WebLoadTester.Modules.UiScenario"
             x:Class="WebLoadTester.Presentation.Views.SettingsViews.UiScenarioSettingsView"
             x:DataType="vm:UiScenarioSettingsViewModel"
             x:Name="Root">
    <StackPanel Spacing="16">
        <Border Classes="section">
            <StackPanel Spacing="12">
                <TextBlock Text="Параметры сценария" Classes="section-title" />
                <Grid ColumnDefinitions="{StaticResource FieldRowColumns}" Classes="field-row">
                    <TextBlock Text="Стартовый URL" Classes="field-label" />
                    <TextBox Classes="field-control"
                             Watermark="Можно оставить пустым, если первый шаг — Переход"
                             Text="{Binding TargetUrl, Mode=TwoWay}" />
                </Grid>
                <Grid ColumnDefinitions="{StaticResource FieldRowColumns}" Classes="field-row">
                    <TextBlock Text="Таймаут ожиданий, мс" Classes="field-label" />
                    <NumericUpDown Classes="field-control"
                                   Minimum="1000"
                                   Maximum="120000"
                                   Increment="500"
                                   Value="{Binding TimeoutMs, Mode=TwoWay}" />
                </Grid>
            </StackPanel>
        </Border>

        <Border Classes="section">
            <StackPanel Spacing="12">
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12" ClipToBounds="True">
                    <TextBlock Text="Шаги" Classes="section-title" TextTrimming="CharacterEllipsis" MaxLines="1" />
                    <WrapPanel Grid.Column="1" Classes="wrap-gap">
                        <Button Content="Добавить" Command="{Binding AddStepCommand}" />
                    </WrapPanel>
                </Grid>

                <TextBlock Text="Variant B: Action + Selector + Value + DelayMs"
                           Classes="status-line" />

                <Grid ColumnDefinitions="2*,2*,2*,Auto,Auto" ColumnSpacing="8">
                    <TextBlock Text="Действие" Classes="field-label" />
                    <TextBlock Grid.Column="1" Text="Selector" Classes="field-label" />
                    <TextBlock Grid.Column="2" Text="Value" Classes="field-label" />
                    <TextBlock Grid.Column="3" Text="DelayMs" Classes="field-label" />
                    <TextBlock Grid.Column="4" Text="TableToolbar" Classes="field-label" />
                </Grid>

                <ItemsControl ItemsSource="{Binding Steps}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="domain:UiStep">
                            <Border Classes="step-card">
                                <Grid ColumnDefinitions="2*,2*,2*,Auto,Auto" ColumnSpacing="8">
                                    <ComboBox ItemsSource="{Binding DataContext.ActionOptions, ElementName=Root}"
                                              SelectedItem="{Binding Action, Mode=TwoWay}">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate x:DataType="domain:UiStepAction">
                                                <TextBlock Text="{Binding ., Converter={StaticResource UiScenarioActionDisplayConverter}}" />
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>

                                    <TextBox Grid.Column="1"
                                             Watermark="#id / .class / xpath"
                                             Text="{Binding Selector, Mode=TwoWay}" />

                                    <TextBox Grid.Column="2"
                                             Watermark="URL / текст / имя скриншота"
                                             Text="{Binding Value, Mode=TwoWay}" />

                                    <NumericUpDown Grid.Column="3"
                                                   Width="120"
                                                   Minimum="0"
                                                   Maximum="60000"
                                                   Increment="100"
                                                   Value="{Binding DelayMs, Mode=TwoWay}" />

                                    <WrapPanel Grid.Column="4" Classes="wrap-gap">
                                        <Button Content="Дублировать"
                                                Command="{Binding DataContext.DuplicateStepCommand, ElementName=Root}"
                                                CommandParameter="{Binding}" />
                                        <Button Content="↑"
                                                Command="{Binding DataContext.MoveStepUpCommand, ElementName=Root}"
                                                CommandParameter="{Binding}" />
                                        <Button Content="↓"
                                                Command="{Binding DataContext.MoveStepDownCommand, ElementName=Root}"
                                                CommandParameter="{Binding}" />
                                        <Button Content="Удалить"
                                                Classes="danger"
                                                Command="{Binding DataContext.RemoveStepCommand, ElementName=Root}"
                                                CommandParameter="{Binding}" />
                                    </WrapPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
