<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WebLoadTester.Presentation.ViewModels.SettingsViewModels"
             x:Class="WebLoadTester.Presentation.Views.SettingsViews.NetDiagnosticsSettingsView"
             x:DataType="vm:NetDiagnosticsSettingsViewModel">
    <StackPanel Spacing="8">
        <TextBlock Text="Network Diagnostics" Classes="h1"/>
        <TextBlock Text="Hostname" Classes="label"/>
        <TextBox Text="{Binding Model.Hostname}"/>
        <WrapPanel Spacing="8">
            <CheckBox Content="DNS" IsChecked="{Binding Model.EnableDns}"/>
            <CheckBox Content="TCP" IsChecked="{Binding Model.EnableTcp}"/>
            <CheckBox Content="TLS" IsChecked="{Binding Model.EnableTls}"/>
        </WrapPanel>
        <TextBlock Text="Ports" Classes="label"/>
        <ItemsControl ItemsSource="{Binding Model.Ports}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBox Text="{Binding}" Width="80"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>
