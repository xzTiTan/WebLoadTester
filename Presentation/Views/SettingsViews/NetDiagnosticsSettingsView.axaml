<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WebLoadTester.Presentation.ViewModels.SettingsViewModels"
             xmlns:dg="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.DataGrid"
             x:Class="WebLoadTester.Presentation.Views.SettingsViews.NetDiagnosticsSettingsView"
             x:DataType="vm:NetDiagnosticsSettingsViewModel">
    <StackPanel Spacing="16">
        <Border Classes="section">
            <StackPanel Spacing="8">
                <TextBlock Text="Опции" Classes="section-title" />
                <Grid ColumnDefinitions="{StaticResource FieldRowColumns}" Classes="field-row">
                    <TextBlock Text="Имя хоста" Classes="field-label" />
                    <TextBox Classes="field-control" Text="{Binding Hostname, Mode=TwoWay}" />
                </Grid>
                <Grid ColumnDefinitions="{StaticResource FieldRowColumns}" Classes="field-row">
                    <TextBlock Text="Проверки" Classes="field-label" />
                    <WrapPanel Classes="field-control" Spacing="8">
                        <CheckBox Content="DNS" IsChecked="{Binding EnableDns, Mode=TwoWay}" />
                        <CheckBox Content="TCP" IsChecked="{Binding EnableTcp, Mode=TwoWay}" />
                        <CheckBox Content="TLS" IsChecked="{Binding EnableTls, Mode=TwoWay}" />
                    </WrapPanel>
                </Grid>
                <Grid ColumnDefinitions="{StaticResource FieldRowColumns}" Classes="field-row">
                    <TextBlock Text="Автопорты по схеме URL" Classes="field-label" />
                    <CheckBox Classes="field-control"
                              Content="http → 80, https → 443"
                              IsChecked="{Binding AutoPortsByScheme, Mode=TwoWay}" />
                </Grid>
            </StackPanel>
        </Border>

        <Border Classes="section">
            <StackPanel Spacing="8">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Text="Порты / проверки" Classes="section-title" />
                    <WrapPanel Grid.Column="1" Classes="toolbar-wrap">
                        <Button Content="Добавить" Command="{Binding AddPortCommand}"
                                IsEnabled="{Binding AutoPortsByScheme, Converter={StaticResource BooleanNotConverter}}" />
                        <Button Content="Удалить" Command="{Binding RemoveSelectedPortCommand}"
                                IsEnabled="{Binding AutoPortsByScheme, Converter={StaticResource BooleanNotConverter}}" />
                    </WrapPanel>
                </Grid>
                <dg:DataGrid ItemsSource="{Binding Ports}"
                             SelectedItem="{Binding SelectedPort, Mode=TwoWay}"
                             AutoGenerateColumns="False"
                             Classes="list-min-180"
                             IsEnabled="{Binding AutoPortsByScheme, Converter={StaticResource BooleanNotConverter}}">
                    <dg:DataGrid.Columns>
                        <dg:DataGridTextColumn Header="Порт" Binding="{Binding Value}" Width="*" />
                    </dg:DataGrid.Columns>
                </dg:DataGrid>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
