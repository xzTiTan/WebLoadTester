<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WebLoadTester.Presentation.ViewModels.SettingsViewModels"
             xmlns:rows="clr-namespace:WebLoadTester.Presentation.ViewModels.SettingsViewModels.NetDiagnostics"
             xmlns:controls="clr-namespace:WebLoadTester.Presentation.Views.Controls"
             x:Class="WebLoadTester.Presentation.Views.SettingsViews.NetDiagnosticsSettingsView"
             x:DataType="vm:NetDiagnosticsSettingsViewModel">
    <UserControl.DataTemplates>
        <DataTemplate x:DataType="rows:PortRowViewModel">
            <StackPanel Spacing="4" Margin="0,0,0,8">
                <Grid ColumnDefinitions="120,2*" ColumnSpacing="8">
                    <NumericUpDown Grid.Column="0" Minimum="1" Maximum="65535" Value="{Binding Port, Mode=TwoWay}" />
                    <TextBox Grid.Column="1" Text="{Binding Label, Mode=TwoWay}" Watermark="Label" />
                </Grid>
                <TextBlock Text="{Binding RowErrorText}" IsVisible="{Binding HasRowError}" />
            </StackPanel>
        </DataTemplate>
    </UserControl.DataTemplates>

    <StackPanel Spacing="16">
        <Border Classes="section">
            <StackPanel Spacing="8">
                <TextBlock Text="Опции" Classes="section-title" />
                <Grid ColumnDefinitions="{StaticResource FieldRowColumns}" Classes="field-row">
                    <TextBlock Text="Hostname" Classes="field-label" />
                    <TextBox Classes="field-control" Text="{Binding Hostname, Mode=TwoWay}" />
                </Grid>
                <Grid ColumnDefinitions="{StaticResource FieldRowColumns}" Classes="field-row">
                    <TextBlock Text="Проверки" Classes="field-label" />
                    <WrapPanel Classes="field-control wrap-gap">
                        <CheckBox Content="DNS" IsChecked="{Binding CheckDns, Mode=TwoWay}" />
                        <CheckBox Content="TCP" IsChecked="{Binding CheckTcp, Mode=TwoWay}" />
                        <CheckBox Content="TLS" IsChecked="{Binding CheckTls, Mode=TwoWay}" />
                    </WrapPanel>
                </Grid>
                <Grid ColumnDefinitions="{StaticResource FieldRowColumns}" Classes="field-row">
                    <TextBlock Text="UseAutoPorts" Classes="field-label" />
                    <CheckBox Classes="field-control" Content="Автоматически использовать :443" IsChecked="{Binding UseAutoPorts, Mode=TwoWay}" />
                </Grid>
            </StackPanel>
        </Border>

        <Border Classes="section">
            <StackPanel Spacing="8" IsEnabled="{Binding UseAutoPorts, Converter={StaticResource BooleanNotConverter}}">
                <TextBlock Text="Ports" Classes="section-title" />
                <controls:RowListEditorView DataContext="{Binding PortsEditor}" />
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
