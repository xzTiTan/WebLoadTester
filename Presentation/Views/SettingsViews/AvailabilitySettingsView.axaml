<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WebLoadTester.Presentation.ViewModels.SettingsViewModels"
             x:Class="WebLoadTester.Presentation.Views.SettingsViews.AvailabilitySettingsView"
             x:DataType="vm:AvailabilitySettingsViewModel">
    <StackPanel Spacing="16">
        <Border Classes="section">
            <StackPanel Spacing="8">
                <TextBlock Text="Доступность" Classes="section-title" />

                <Grid ColumnDefinitions="{StaticResource FieldRowColumns}" Classes="field-row">
                    <TextBlock Text="Тип проверки" Classes="field-label" />
                    <ComboBox Classes="field-control" ItemsSource="{Binding CheckTypeOptions}" SelectedItem="{Binding CheckType, Mode=TwoWay}" />
                </Grid>

                <Grid ColumnDefinitions="{StaticResource FieldRowColumns}" Classes="field-row" IsVisible="{Binding IsHttp}">
                    <TextBlock Text="URL" Classes="field-label" />
                    <TextBox Classes="field-control" Text="{Binding Url, Mode=TwoWay}" />
                </Grid>

                <Grid ColumnDefinitions="{StaticResource FieldRowColumns}" Classes="field-row" IsVisible="{Binding IsTcp}">
                    <TextBlock Text="Хост" Classes="field-label" />
                    <TextBox Classes="field-control" Text="{Binding Host, Mode=TwoWay}" />
                </Grid>

                <Grid ColumnDefinitions="{StaticResource FieldRowColumns}" Classes="field-row" IsVisible="{Binding IsTcp}">
                    <TextBlock Text="Порт" Classes="field-label" />
                    <NumericUpDown Classes="field-control" Minimum="1" Maximum="65535" Value="{Binding Port, Mode=TwoWay}" />
                </Grid>

                <Grid ColumnDefinitions="{StaticResource FieldRowColumns}" Classes="field-row">
                    <TextBlock Text="Таймаут (мс)" Classes="field-label" />
                    <NumericUpDown Classes="field-control" Minimum="1" Value="{Binding TimeoutMs, Mode=TwoWay}" />
                </Grid>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
