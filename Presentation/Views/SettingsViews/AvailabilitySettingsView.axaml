<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="WebLoadTester.Presentation.Views.SettingsViews.AvailabilitySettingsView">
    <ScrollViewer>
        <StackPanel Spacing="8">
            <TextBlock Text="Availability Settings" Classes="h1" />
            <TextBlock Text="Target" Classes="label" />
            <TextBox Text="{Binding Target}" />
            <TextBlock Text="Target Type" Classes="label" />
            <TextBox Text="{Binding TargetType}" />
            <StackPanel Orientation="Horizontal" Spacing="8">
                <StackPanel>
                    <TextBlock Text="Interval (sec)" Classes="label" />
                    <TextBox Text="{Binding IntervalSeconds}" />
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Duration (min)" Classes="label" />
                    <TextBox Text="{Binding DurationMinutes}" />
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Timeout (ms)" Classes="label" />
                    <TextBox Text="{Binding TimeoutMs}" />
                </StackPanel>
            </StackPanel>
            <TextBlock Text="Fail Threshold" Classes="label" />
            <TextBox Text="{Binding FailThreshold}" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
