<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WebLoadTester.Presentation.ViewModels.SettingsViewModels"
             x:Class="WebLoadTester.Presentation.Views.SettingsViews.SecurityBaselineSettingsView"
             x:DataType="vm:SecurityBaselineSettingsViewModel">
    <StackPanel Spacing="8">
        <TextBlock Text="Security Baseline" Classes="h1"/>
        <TextBlock Text="URL" Classes="label"/>
        <TextBox Text="{Binding Model.Url}"/>
        <WrapPanel Spacing="8">
            <CheckBox Content="Check Headers" IsChecked="{Binding Model.CheckHeaders}"/>
            <CheckBox Content="Redirect HTTP->HTTPS" IsChecked="{Binding Model.CheckRedirectHttpToHttps}"/>
            <CheckBox Content="Check TLS Expiry" IsChecked="{Binding Model.CheckTlsExpiry}"/>
        </WrapPanel>
    </StackPanel>
</UserControl>
