<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WebLoadTester.Presentation.ViewModels.SettingsViewModels"
             x:Class="WebLoadTester.Presentation.Views.SettingsViews.SecurityBaselineSettingsView"
             x:DataType="vm:SecurityBaselineSettingsViewModel">
    <StackPanel Spacing="16">
        <Border Classes="section">
            <StackPanel Spacing="8">
                <TextBlock Text="Базовая безопасность" Classes="section-title" />
                <Grid Classes="field-row">
                    <TextBlock Text="URL" Classes="field-label" />
                    <TextBox Classes="field-control" Text="{Binding Url, Mode=TwoWay}" />
                </Grid>
                <CheckBox Content="Проверять заголовки" IsChecked="{Binding CheckHeaders, Mode=TwoWay}" />
                <CheckBox Content="Проверять редирект HTTP→HTTPS" IsChecked="{Binding CheckRedirectHttpToHttps, Mode=TwoWay}" />
                <CheckBox Content="Проверять срок TLS" IsChecked="{Binding CheckTlsExpiry, Mode=TwoWay}" />
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
