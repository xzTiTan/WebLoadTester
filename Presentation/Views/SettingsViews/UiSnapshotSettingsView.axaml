<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WebLoadTester.Presentation.ViewModels.SettingsViewModels"
             x:Class="WebLoadTester.Presentation.Views.SettingsViews.UiSnapshotSettingsView"
             x:DataType="vm:UiSnapshotSettingsViewModel">
    <StackPanel Spacing="8">
        <TextBlock Text="UI Snapshot Settings" Classes="h1"/>
        <TextBlock Text="URLs" Classes="label"/>
        <ItemsControl ItemsSource="{Binding Model.Urls}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBox Text="{Binding Url}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <WrapPanel Spacing="8">
            <StackPanel>
                <TextBlock Text="Concurrency" Classes="label"/>
                <TextBox Width="120" Text="{Binding Model.Concurrency}"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Wait Until" Classes="label"/>
                <TextBox Width="120" Text="{Binding Model.WaitUntil}"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Delay After Load (ms)" Classes="label"/>
                <TextBox Width="120" Text="{Binding Model.DelayAfterLoadMs}"/>
            </StackPanel>
        </WrapPanel>
    </StackPanel>
</UserControl>
