<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WebLoadTester.Presentation.ViewModels.SettingsViewModels"
             xmlns:dg="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.DataGrid"
             x:Class="WebLoadTester.Presentation.Views.SettingsViews.UiSnapshotSettingsView"
             x:DataType="vm:UiSnapshotSettingsViewModel">
    <StackPanel Spacing="16">
        <Border Classes="section">
            <StackPanel Spacing="8">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Text="URL-адреса" Classes="section-title" />
                    <StackPanel Grid.Column="1" Classes="list-toolbar">
                        <Button Content="Добавить" Command="{Binding AddTargetCommand}" />
                        <Button Content="Удалить" Command="{Binding RemoveSelectedTargetCommand}" />
                        <Button Content="Очистить" Command="{Binding ClearTargetsCommand}" />
                    </StackPanel>
                </Grid>
                <dg:DataGrid ItemsSource="{Binding Targets}"
                             SelectedItem="{Binding SelectedTarget, Mode=TwoWay}"
                             AutoGenerateColumns="False"
                             Classes="list-min-180">
                    <dg:DataGrid.Columns>
                        <dg:DataGridTextColumn Header="URL" Binding="{Binding Url}" Width="2*" />
                        <dg:DataGridTextColumn Header="Tag" Binding="{Binding Tag}" Width="*" />
                    </dg:DataGrid.Columns>
                </dg:DataGrid>
            </StackPanel>
        </Border>

        <Border Classes="section">
            <StackPanel Spacing="8">
                <TextBlock Text="Параметры снимка" Classes="section-title" />
                <Grid ColumnDefinitions="{StaticResource FieldRowColumns}" Classes="field-row">
                    <TextBlock Text="WaitUntil" Classes="field-label" />
                    <ComboBox Classes="field-control"
                              ItemsSource="{Binding WaitUntilOptions}"
                              SelectedItem="{Binding WaitUntil, Mode=TwoWay}" />
                </Grid>
                <Grid ColumnDefinitions="{StaticResource FieldRowColumns}" Classes="field-row">
                    <TextBlock Text="ExtraDelayMs" Classes="field-label" />
                    <NumericUpDown Classes="field-control" Minimum="0" Increment="100" Value="{Binding ExtraDelayMs, Mode=TwoWay}" />
                </Grid>
                <Grid ColumnDefinitions="{StaticResource FieldRowColumns}" Classes="field-row">
                    <TextBlock Text="FullPage" Classes="field-label" />
                    <CheckBox Classes="field-control" Content="Включено" IsChecked="{Binding FullPage, Mode=TwoWay}" />
                </Grid>
            </StackPanel>
        </Border>

        <Border Classes="section">
            <StackPanel Spacing="8">
                <TextBlock Text="Параметры запуска" Classes="section-title" />
                <Grid ColumnDefinitions="{StaticResource FieldRowColumns}" Classes="field-row">
                    <TextBlock Text="Concurrency" Classes="field-label" />
                    <NumericUpDown Classes="field-control" Minimum="1" Value="{Binding Concurrency, Mode=TwoWay}" />
                </Grid>
                <Grid ColumnDefinitions="{StaticResource FieldRowColumns}" Classes="field-row">
                    <TextBlock Text="RepeatsPerUrl" Classes="field-label" />
                    <NumericUpDown Classes="field-control" Minimum="1" Value="{Binding RepeatsPerUrl, Mode=TwoWay}" />
                </Grid>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
