<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WebLoadTester.Presentation.ViewModels.SettingsViewModels"
             xmlns:domain="clr-namespace:WebLoadTester.Modules.UiSnapshot"
             xmlns:dg="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.DataGrid"
             xmlns:core="clr-namespace:WebLoadTester.Core.Domain"
             x:Class="WebLoadTester.Presentation.Views.SettingsViews.UiSnapshotSettingsView"
             x:DataType="vm:UiSnapshotSettingsViewModel">
    <StackPanel Spacing="16">
        <Border Classes="section">
            <StackPanel Spacing="12">
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12" ClipToBounds="True">
                    <TextBlock Text="Цели снимков" Classes="section-title" TextTrimming="CharacterEllipsis" MaxLines="1" />
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                        <Button Content="+ Добавить" Command="{Binding AddTargetCommand}" />
                        <Button Content="↑" Command="{Binding MoveTargetUpCommand}" />
                        <Button Content="↓" Command="{Binding MoveTargetDownCommand}" />
                        <Button Content="Удалить" Classes="danger" Command="{Binding RemoveSelectedTargetCommand}" />
                    </StackPanel>
                </Grid>

                <dg:DataGrid ItemsSource="{Binding Targets}"
                             SelectedItem="{Binding SelectedTarget, Mode=TwoWay}"
                             AutoGenerateColumns="False"
                             Classes="list-min-180">
                    <dg:DataGrid.Columns>
                        <dg:DataGridTextColumn Header="URL" Binding="{Binding Url}" Width="2*" />
                        <dg:DataGridTextColumn Header="Selector" Binding="{Binding Selector}" Width="2*" />
                        <dg:DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                    </dg:DataGrid.Columns>
                </dg:DataGrid>
            </StackPanel>
        </Border>

        <Border Classes="section">
            <StackPanel Spacing="12">
                <TextBlock Text="Параметры снимка" Classes="section-title" />

                <Grid ColumnDefinitions="{StaticResource FieldRowColumns}" Classes="field-row">
                    <TextBlock Text="Событие загрузки" Classes="field-label" />
                    <ComboBox Classes="field-control" ItemsSource="{Binding WaitUntilOptions}" SelectedItem="{Binding WaitUntil, Mode=TwoWay}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate x:DataType="core:UiWaitUntil">
                                <TextBlock Text="{Binding ., Converter={StaticResource UiWaitUntilDisplayConverter}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>

                <Grid ColumnDefinitions="{StaticResource FieldRowColumns}" Classes="field-row">
                    <TextBlock Text="Таймаут, сек" Classes="field-label" />
                    <NumericUpDown Classes="field-control" Minimum="1" Maximum="300" Value="{Binding TimeoutSeconds, Mode=TwoWay}" />
                </Grid>

                <Grid ColumnDefinitions="{StaticResource FieldRowColumns}" Classes="field-row">
                    <TextBlock Text="Полная страница" Classes="field-label" />
                    <ToggleSwitch Classes="field-control" IsChecked="{Binding FullPage, Mode=TwoWay}" />
                </Grid>

                <Grid ColumnDefinitions="{StaticResource FieldRowColumns}" Classes="field-row">
                    <TextBlock Text="Viewport width" Classes="field-label" />
                    <NumericUpDown Classes="field-control" Minimum="0" Maximum="4096" Value="{Binding ViewportWidth, Mode=TwoWay}" />
                </Grid>

                <Grid ColumnDefinitions="{StaticResource FieldRowColumns}" Classes="field-row">
                    <TextBlock Text="Viewport height" Classes="field-label" />
                    <NumericUpDown Classes="field-control" Minimum="0" Maximum="4096" Value="{Binding ViewportHeight, Mode=TwoWay}" />
                </Grid>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
