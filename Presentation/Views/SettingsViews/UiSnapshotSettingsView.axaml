<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="WebLoadTester.Presentation.Views.SettingsViews.UiSnapshotSettingsView">
    <ScrollViewer>
        <StackPanel Spacing="8">
            <TextBlock Text="UI Snapshot Settings" Classes="h1" />
            <TextBlock Text="URLs" Classes="label" />
            <ItemsControl ItemsSource="{Binding Urls}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBox Text="{Binding .}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <StackPanel Orientation="Horizontal" Spacing="8">
                <StackPanel>
                    <TextBlock Text="Concurrency" Classes="label" />
                    <TextBox Text="{Binding Concurrency}" />
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Wait Mode" Classes="label" />
                    <TextBox Text="{Binding WaitMode}" />
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Delay (ms)" Classes="label" />
                    <TextBox Text="{Binding DelayAfterLoadMs}" />
                </StackPanel>
            </StackPanel>
            <CheckBox Content="Headless" IsChecked="{Binding Headless}" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
