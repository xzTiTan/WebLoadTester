<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WebLoadTester.Presentation.ViewModels.Tabs"
             xmlns:local="clr-namespace:WebLoadTester.Presentation.Views.SettingsViews"
             x:Class="WebLoadTester.Presentation.Views.Tabs.UiTestingTab"
             x:DataType="vm:ModuleFamilyViewModel">
    <Grid ColumnDefinitions="260,*" RowDefinitions="*" ColumnSpacing="12">
        <Border Classes="panel" Padding="8" Grid.Column="0">
            <StackPanel Spacing="6">
                <TextBlock Text="Модули" Classes="h1" />
                <ListBox ItemsSource="{Binding Modules}" SelectedItem="{Binding SelectedModule, Mode=TwoWay}"
                         HorizontalContentAlignment="Stretch">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DisplayName}" TextWrapping="Wrap" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <Border Classes="panel" Grid.Column="1">
            <ContentControl Content="{Binding SelectedModule.SettingsViewModel}" />
        </Border>
    </Grid>
</UserControl>
