<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WebLoadTester.Presentation.ViewModels"
             x:Class="WebLoadTester.Presentation.Views.Tabs.RunsTab"
             x:DataType="vm:RunsTabViewModel">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="12">
            <Border Classes="panel">
                <StackPanel Spacing="6">
                    <TextBlock Text="Фильтры" Classes="h1" />
                    <TextBlock Text="Модуль" Classes="label" />
                    <ComboBox ItemsSource="{Binding ModuleFilterOptions}"
                              SelectedItem="{Binding SelectedModuleType, Mode=TwoWay}" />
                    <TextBlock Text="Статус" Classes="label" />
                    <ComboBox ItemsSource="{Binding StatusFilterOptions}"
                              SelectedItem="{Binding SelectedStatus, Mode=TwoWay}" />
                    <TextBlock Text="С" Classes="label" />
                    <DatePicker SelectedDate="{Binding FromDate, Mode=TwoWay}" />
                    <TextBlock Text="По" Classes="label" />
                    <DatePicker SelectedDate="{Binding ToDate, Mode=TwoWay}" />
                    <TextBlock Text="Поиск" Classes="label" />
                    <TextBox Text="{Binding SearchText, Mode=TwoWay}" />
                    <Button Content="Применить" Command="{Binding RefreshCommand}" />
                </StackPanel>
            </Border>

            <Border Classes="panel">
                <StackPanel Spacing="6">
                    <TextBlock Text="Прогоны" Classes="h1" />
                    <DataGrid ItemsSource="{Binding Runs}" SelectedItem="{Binding SelectedRun, Mode=TwoWay}" Height="300">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="DateTime" Binding="{Binding StartedAt}" Width="2*" />
                            <DataGridTextColumn Header="TestName" Binding="{Binding TestName}" Width="2*" />
                            <DataGridTextColumn Header="ModuleName" Binding="{Binding ModuleName}" Width="2*" />
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*" />
                            <DataGridTextColumn Header="Duration" Binding="{Binding DurationMs}" Width="*" />
                            <DataGridTextColumn Header="Failed" Binding="{Binding FailedItems}" Width="*" />
                            <DataGridTextColumn Header="KeyMetrics" Binding="{Binding KeyMetrics}" Width="2*" />
                            <DataGridTextColumn Header="RunId" Binding="{Binding RunId}" Width="2*" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Открыть JSON" Command="{Binding OpenJsonCommand}" />
                        <Button Content="Открыть HTML" Command="{Binding OpenHtmlCommand}" />
                        <Button Content="Открыть папку" Command="{Binding OpenRunFolderCommand}" />
                        <Button Content="Копировать RunId" Command="{Binding CopyRunIdCommand}" />
                        <Button Content="Повторить запуск" Command="{Binding RepeatRunCommand}" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
