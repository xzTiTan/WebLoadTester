<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WebLoadTester.Presentation.ViewModels.Tabs"
             x:Class="WebLoadTester.Presentation.Views.Tabs.ReportsTab"
             x:DataType="vm:ReportsTabViewModel">
    <Border Classes="panel" Padding="8">
        <Grid RowDefinitions="Auto,*,Auto" RowSpacing="8">
            <TextBlock Text="Reports" Classes="h1" />

            <ListBox Grid.Row="1" ItemsSource="{Binding Reports}" SelectedItem="{Binding SelectedReport, Mode=TwoWay}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding FileName}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="8">
                <Button Content="Refresh" Command="{Binding RefreshCommand}" />
                <Button Content="Open HTML" Command="{Binding OpenHtmlCommand}" />
                <Button Content="Open Folder" Command="{Binding OpenFolderCommand}" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
