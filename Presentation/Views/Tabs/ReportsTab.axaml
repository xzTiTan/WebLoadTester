<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WebLoadTester.Presentation.ViewModels.Tabs"
             x:Class="WebLoadTester.Presentation.Views.Tabs.ReportsTab"
             x:DataType="vm:ReportsTabViewModel">
    <Grid RowDefinitions="Auto,Auto,*" RowSpacing="8">
        <TextBlock Text="Reports" Classes="h1"/>
        <WrapPanel Grid.Row="1" Spacing="8">
            <Button Content="Open HTML" Command="{Binding OpenReportCommand}"/>
            <Button Content="Open Folder" Command="{Binding OpenFolderCommand}"/>
        </WrapPanel>
        <ListBox Grid.Row="2" ItemsSource="{Binding Reports}" SelectedItem="{Binding SelectedReport, Mode=TwoWay}"/>
    </Grid>
</UserControl>
