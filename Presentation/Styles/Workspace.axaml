<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style Selector="Grid.field-row">
        <Setter Property="ColumnSpacing" Value="{DynamicResource SpacingS}" />
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>

    <Style Selector="TextBlock.field-label">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <Style Selector="Control.field-control">
        <Setter Property="Grid.Column" Value="1" />
        <Setter Property="VerticalAlignment" Value="Top" />
    </Style>

    <Style Selector="TextBox.field-control">
        <Setter Property="MaxWidth" Value="520" />
        <Setter Property="HorizontalAlignment" Value="Left" />
    </Style>

    <Style Selector="ComboBox.field-control">
        <Setter Property="MaxWidth" Value="520" />
        <Setter Property="HorizontalAlignment" Value="Left" />
    </Style>

    <Style Selector="NumericUpDown.field-control">
        <Setter Property="MaxWidth" Value="220" />
        <Setter Property="HorizontalAlignment" Value="Left" />
    </Style>

    <Style Selector="TextBlock.status-line">
        <Setter Property="Foreground" Value="{DynamicResource MutedTextBrush}" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <Style Selector="StackPanel.empty-state">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Spacing" Value="{DynamicResource SpacingXs}" />
        <Setter Property="Margin" Value="0,8,0,0" />
    </Style>

    <Style Selector="TextBlock.empty-title">
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style Selector="DataGrid.list-min-180">
        <Setter Property="MinHeight" Value="180" />
        <Setter Property="MaxHeight" Value="320" />
    </Style>

    <Style Selector="DataGrid.list-min-240">
        <Setter Property="MinHeight" Value="240" />
        <Setter Property="MaxHeight" Value="380" />
    </Style>

    <Style Selector="Border.log-box">
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrushNeutral}" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="Background" Value="{DynamicResource CardBackground}" />
    </Style>

    <Style Selector="ListBox.loglist">
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <Style Selector="TextBlock.logline">
        <Setter Property="FontFamily" Value="Cascadia Mono,Consolas,Menlo,Monospace" />
        <Setter Property="FontSize" Value="13" />
    </Style>

    <Style Selector="TabControl.main-tabs">
        <Setter Property="Padding" Value="12" />
    </Style>

    <Style Selector="ListBox.segmented-bar">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="4" />
    </Style>

    <Style Selector="ListBox.segmented-bar ListBoxItem">
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="Background" Value="{DynamicResource CardBackground}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrushNeutral}" />
        <Setter Property="CornerRadius" Value="8" />
    </Style>

    <Style Selector="ListBox.segmented-bar ListBoxItem:selected">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
    </Style>

    <Style Selector="Border.step-card">
        <Setter Property="Padding" Value="12" />
        <Setter Property="Margin" Value="0,0,0,8" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrushNeutral}" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Background" Value="{DynamicResource CardBackground}" />
    </Style>
</Styles>
