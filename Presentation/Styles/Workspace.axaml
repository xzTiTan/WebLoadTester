<Styles xmlns="https://github.com/avaloniaui">
    <Style Selector="Border.section">
        <Setter Property="Padding" Value="16" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="#D0D0D0" />
        <Setter Property="CornerRadius" Value="6" />
    </Style>

    <Style Selector="TextBlock.section-title">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style Selector="StackPanel.section-actions">
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="Spacing" Value="{DynamicResource SpacingS}" />
    </Style>

    <Style Selector="StackPanel.list-toolbar">
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="Spacing" Value="{DynamicResource SpacingS}" />
    </Style>

    <Style Selector="Grid.field-row">
        <Setter Property="ColumnSpacing" Value="{DynamicResource SpacingS}" />
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>

    <Style Selector="TextBlock.field-label">
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style Selector="Control.field-control">
        <Setter Property="Grid.Column" Value="1" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style Selector="TextBlock.status-line">
        <Setter Property="Foreground" Value="Gray" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <Style Selector="StackPanel.empty-state">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Spacing" Value="{DynamicResource SpacingXs}" />
        <Setter Property="Margin" Value="0,8,0,0" />
    </Style>

    <Style Selector="TextBlock.empty-title">
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style Selector="DataGrid.list-min-180">
        <Setter Property="MinHeight" Value="180" />
    </Style>

    <Style Selector="DataGrid.list-min-240">
        <Setter Property="MinHeight" Value="240" />
    </Style>

    <Style Selector="Border.log-box">
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="#D0D0D0" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="8" />
    </Style>

    <Style Selector="ListBox.loglist">
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <Style Selector="TextBlock.logline">
        <Setter Property="FontFamily" Value="Cascadia Mono,Consolas,Menlo,Monospace" />
        <Setter Property="FontSize" Value="13" />
    </Style>
</Styles>
