<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Styles.Resources>
        <x:Double x:Key="SpacingXs">4</x:Double>
        <x:Double x:Key="SpacingS">8</x:Double>
        <x:Double x:Key="SpacingM">12</x:Double>
        <x:Double x:Key="SpacingL">16</x:Double>
        <x:Double x:Key="SpacingXl">24</x:Double>
        <x:Double x:Key="SpacingXxl">32</x:Double>
        <x:Double x:Key="LabelColumnWidth">220</x:Double>

        <CornerRadius x:Key="CardCornerRadius">12</CornerRadius>

        <Color x:Key="PageBackgroundColor">#F5F6F8</Color>
        <Color x:Key="CardBackgroundColor">#FFFFFF</Color>
        <Color x:Key="BorderNeutralColor">#DADDE3</Color>
        <Color x:Key="MutedTextColor">#6B7280</Color>
        <Color x:Key="PrimaryColor">#2563EB</Color>
        <Color x:Key="PrimaryHoverColor">#1D4ED8</Color>
        <Color x:Key="DangerColor">#DC2626</Color>
        <Color x:Key="DangerHoverColor">#B91C1C</Color>
        <Color x:Key="WarningBackgroundColor">#FFF4E5</Color>
        <Color x:Key="WarningBorderColor">#F4C16D</Color>
        <Color x:Key="BadgeOkBackgroundColor">#E7F6ED</Color>
        <Color x:Key="BadgeOkBorderColor">#9AD0A9</Color>
        <Color x:Key="BadgeWarnBackgroundColor">#FEF3C7</Color>
        <Color x:Key="BadgeWarnBorderColor">#F5D575</Color>
        <Color x:Key="BadgeErrBackgroundColor">#FEE2E2</Color>
        <Color x:Key="BadgeErrBorderColor">#FCA5A5</Color>

        <SolidColorBrush x:Key="PageBackground" Color="{DynamicResource PageBackgroundColor}" />
        <SolidColorBrush x:Key="CardBackground" Color="{DynamicResource CardBackgroundColor}" />
        <SolidColorBrush x:Key="BorderBrushNeutral" Color="{DynamicResource BorderNeutralColor}" />
        <SolidColorBrush x:Key="MutedTextBrush" Color="{DynamicResource MutedTextColor}" />
        <SolidColorBrush x:Key="PrimaryBrush" Color="{DynamicResource PrimaryColor}" />
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{DynamicResource PrimaryHoverColor}" />
        <SolidColorBrush x:Key="DangerBrush" Color="{DynamicResource DangerColor}" />
        <SolidColorBrush x:Key="DangerHoverBrush" Color="{DynamicResource DangerHoverColor}" />
        <SolidColorBrush x:Key="WarningBackgroundBrush" Color="{DynamicResource WarningBackgroundColor}" />
        <SolidColorBrush x:Key="WarningBorderBrush" Color="{DynamicResource WarningBorderColor}" />
        <SolidColorBrush x:Key="BadgeOkBackgroundBrush" Color="{DynamicResource BadgeOkBackgroundColor}" />
        <SolidColorBrush x:Key="BadgeOkBorderBrush" Color="{DynamicResource BadgeOkBorderColor}" />
        <SolidColorBrush x:Key="BadgeWarnBackgroundBrush" Color="{DynamicResource BadgeWarnBackgroundColor}" />
        <SolidColorBrush x:Key="BadgeWarnBorderBrush" Color="{DynamicResource BadgeWarnBorderColor}" />
        <SolidColorBrush x:Key="BadgeErrBackgroundBrush" Color="{DynamicResource BadgeErrBackgroundColor}" />
        <SolidColorBrush x:Key="BadgeErrBorderBrush" Color="{DynamicResource BadgeErrBorderColor}" />
    </Styles.Resources>
</Styles>
